<doctype! html5>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login page</title>
  
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script> 
 
    
</head>
<body>


<button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login</button>

<div id="id01" class="modal">
  
  <div class="modal-content animate" >
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
      <%= image_tag("Av/Avatar.png", :class => "Ava") %>
    


            <div class="login">


                <%= form_for(resource, as: resource_name, :html=>{:class=>'large-12 medium-12 columns'}, url: session_path(resource_name)) do |f| %>  

                    

                  <h4 class="text-center">LOGIN</h4>

                      
                  <%= f.label :email %>
                  <%= f.email_field :email, autofocus: true %>
  <br>
                  <%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "off" %>
<br><br>

                  <%= f.submit "Submit"  %>
                
                  <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  <% end -%>
  
                    

                <% end %>
                <button onclick="document.getElementById('id03').style.display='block'" style="width:auto;">Forgot Password?</button>
</div>

<div id="id03" class="modal">
  
  <div class="modal-content animate" >
    <div class="imgcontainer">
      <span onclick="document.getElementById('id03').style.display='none'" class="close" title="Close Modal">&times;</span>

    </div>

    <div class="container">
      <div class="logo2">
                
            </div>
            <div class="login">
                 <%= render "shared/forgot" %>
                 
                </div>
            </div>
        </div>
        </div>
        </div>    
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
  </form>
</div>

<script>
// Get the modal
var modal = document.getElementById('id03');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

<script>
