<!Doctype HTML>
<HTML>
<header>
  
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

</header>

<body>

<div class="postblock">
<div class="post-container">


<% if user_signed_in? %>

<h2> YOUR LISTS </h2>

<%if @posts.present? %>
<% @posts.each do |post| %>
	<h3><u><%= post.title %></u></h3>
	<div><%= truncate(post.body, :length => 25) %></div>
	<br>
	<button class="button"><%= link_to "Read List", post %></button>
	<hr>
	<br>
	<% end %>
	<% end %>
<% end %>

</div>
</body>
</HTML>