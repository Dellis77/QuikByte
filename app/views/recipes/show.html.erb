<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <iframe width="350" height="200" src="<%= @recipe.videourl %>" frameborder="0" allowfullscreen></iframe>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Ingredients:</strong>
    <% @ingredients.each_with_index do |recipeshasingredient, index| %>
      <% if index != @ingredients.size - 1 %>
        <%= recipeshasingredient.quantity %> 
        <%= recipeshasingredient.ingredient.name %>,
      <% end %>
      <% if index == @ingredients.size - 1 %>
        <%= recipeshasingredient.quantity %> 
        <%= recipeshasingredient.ingredient.name %>
      <% end %>
   <% end %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Preptime:</strong>
  <%= @recipe.preptime %>
</p>

<p>
  <strong>Cooktime:</strong>
  <%= @recipe.cooktime %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
